{
  "manifest_version": 2,
  "name": "Re-search",
  "version": "1.0",

  "description": "Allows regex search functionality on all webpages.",

  "icons": {
    "48": "icon48.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["re_search.js"]
    }
  ],
  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icon48.png",
    "default_title": "reSearch",
    "default_popup": "popup/main.html"
  }
}
